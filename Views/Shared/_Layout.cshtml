<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Polat Portfolio</title>
    <meta name="description" content="Mehmet Polat Maç - ASP.NET Core MVC, JavaScript ve modern web teknolojileriyle projeler. Portfolyo, blog ve iletişim." />
    <link rel="canonical" href="https://5510-rgb.github.io/polat-portfolio/" />
    <meta property="og:title" content="Polat Portfolio" />
    <meta property="og:description" content="Mehmet Polat Maç - ASP.NET Core MVC, JavaScript ve modern web projeleri. Portfolyo, blog ve iletişim." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://5510-rgb.github.io/polat-portfolio/" />
    <meta property="og:image" content="https://5510-rgb.github.io/polat-portfolio/img/og-image.svg" />
    <meta name="twitter:image" content="https://5510-rgb.github.io/polat-portfolio/img/og-image.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Polat Portfolio" />
    <meta name="twitter:description" content="Mehmet Polat Maç - ASP.NET Core MVC, JavaScript ve modern web projeleri." />
    <link rel="icon" href="@Url.Content("~/favicon.svg")" type="image/svg+xml">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">Mehmet Polat Maç</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-label="Gezinmeyi aç/kapat" aria-controls="navbarNav" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About","Home")">Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Projects")">Projeler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Blog")">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Contact")">İletişim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Cv","Home")">CV</a>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year Mehmet Polat Maç. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="social-links">
                        <a href="https://github.com/5510-RGB" title="GitHub" target="_blank"><i class="fab fa-github"></i></a>
                        <a href="https://youtube.com/@@yazilimcigundi" title="YouTube" target="_blank"><i class="fab fa-youtube"></i></a>
                        <a href="mailto:mehmetpolatmac@gmail.com" title="Email"><i class="fas fa-envelope"></i></a>
                        <a href="https://www.linkedin.com/in/mehmet-polat-ma%C3%A7-a01462332/" title="LinkedIn" target="_blank"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AOS Animation -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="@Url.Content("~/js/script.js")"></script>
</body>
</html>